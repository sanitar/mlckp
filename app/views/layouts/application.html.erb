<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Molockup" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
        padding-left: 20px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
</style>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="brand">MolockUp</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li <%= content_for?(:nav_home) ? yield(:nav_home) : "" %>><a href="/">Home</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <% if content_for?(:breadcrumb) %>
    <ul class="breadcrumb">
      <li><a href="/">Home</a> <span class="divider">></span></li>
    <%= content_for?(:breadcrumb) ? yield(:breadcrumb) : '' %>
  </ul>
  <% end  %>

<%= yield %>

</body>
</html>
