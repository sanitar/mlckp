<% content_for :nav_elements do %>
  class="active"
<% end %>

<div id="navigation">
  <div>
    <div id="elements">
        <ul class="nav nav-list">
          <li class="nav-header">Some header</li>
          <li class="nav-info">All changes saved</li>
          <div id="element" class="well">
            <h6>Elements List<i class="icon-plus" title="Add page"></i></h6>
            <ul class="nav nav-list">
            </ul>
          </div>
        </ul>
    </div>
    <div id="params">
      <div>
        <label>some param: </label>
        <input type="text" />
      </div>
      <div>
        <label>some else param: </label>
        <input type="text" />
      </div>

    </div>
  </div>
</div>

<div id="workspace">
  <div class="leftside">
      <div id="htmlcode">
        <div class="codetype">HTML</div>
        <textarea id="html"></textarea>
      </div>
      <div id="jscode">
        <div class="codetype">javaScript</div>
        <textarea id="js">js</textarea>
      </div>
  </div>
  <div class="rightside">
      <div id="csscode">
        <div class="codetype">css</div>
        <textarea id="css">css</textarea>
      </div>
      <div id="resultcode">
        <div class="codetype">Refresh</div>
        <div id="result">result</div>
      </div>
  </div>
</div>

  <script type="text/template" id="element-item-template">
      <li id="el{{ id }}">
        <a href="#{{ id }}"> {{ label }}
          <span style="display: none;">
            <i class="icon-trash" title="Remove page"></i>
            <i class="icon-pencil" title="Edit page"></i>
          </span>
        </a>
      </li>
  </script>

      <div class="modal hide fade in" id="add-edit-dialog" style="display: none;">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h4></h4>
      </div>
      <div class="modal-body control-group">
        <label class="control-label" for="inputName">Label:</label>
        <input type="text" placeholder="Type name..." id="inputName"/>
      </div>
      <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
      </div>
    </div>

  <script type="text/javascript">
    var elementCollection = new Mock.element.Collection({
      url: 'elements/'
    });
    elementCollection.reset($.parseJSON("<%= @elements.to_json %>".replace(/&quot;/g, '"').replace(/&lt;/g, "<").replace(/&gt;/g, ">")));
  </script>
