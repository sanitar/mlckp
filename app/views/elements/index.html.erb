<% content_for :html_class do %>
    developer
<% end %>

<% content_for :title do %>
  Программист
<% end %>

<% content_for :navigation do %>
    <li xmlns="http://www.w3.org/1999/html"><a href="/">Home</a></li>
    <li><%= link_to "Список проектов", projects_path %></li>
    <li class="active"><%= link_to "Элементы", elements_path %></li>
    <li> <div class="btn btn-info"><i class="icon-play icon-white"></i> Run </div> </li>
<% end %>


<div id="navigation">
  <div>

    <div id="elements">
        <ul class="nav nav-list">
          <li class="nav-header">Some header</li>
          <li class="nav-info">All changes saved</li>
          <div id="element" class="well">
            <h6>Elements List<i class="icon-plus" title="Add page"></i></h6>
            <ul class="nav nav-list">
               <!--список элементов-->
            </ul>
          </div>
        </ul>
    </div>

    <div id="params">
      <ul class="table-list">
        <li id="initial">
          <div>
            <i class="icon-chevron-down"></i>
            Initial
          </div>
          <table class="table table-condensed table-bordered"><tbody>
              <tr><td>width </td><td> <input type="text" name="w" value ="200" class="input-mini input-condensed input-number" /> </td></tr>
              <tr><td>height </td><td> <input type="text" name="h" value ="200" class="input-mini input-condensed input-number" /></td></tr>
              <tr class="initial-resizable"><td>resizable </td><td><input name="r" type="checkbox" checked="checked" /></td></tr>
              <tr><td>&emsp;&emsp;x </td><td><input type="checkbox" name="x" /></td></tr>
              <tr><td>&emsp;&emsp;y </td><td><input type="checkbox" name="y" /></td></tr>
          </tbody></table>
        </li>

        <li id="parameters">
          <div>
            <i class="icon-chevron-down"></i>
            Parameters
            <i class="icon-plus"></i>
          </div>
          <table class="table table-condensed table-bordered"><tbody>
          </tbody></table>
        </li>

        <li id="dependencies">
          <div>
            <i class="icon-chevron-down"></i>
            Dependencies
            <i class="icon-plus"></i>
          </div>
          <table class="table table-condensed table-bordered"><tbody>
          </tbody></table>
        </li>

      </ul>
    </div>

  </div>
</div>

<div id="workspace">
  <div class="leftside">
      <div id="htmlcode">
        <div class="codetype">HTML</div>
        <textarea id="html"></textarea>
      </div>
      <div id="jscode">
        <div class="codetype">javaScript</div>
        <textarea id="js">js</textarea>
      </div>
  </div>
  <div class="rightside">
      <div id="csscode">
        <div class="codetype">css</div>
        <textarea id="css">css</textarea>
      </div>
      <div id="resultcode">
        <div id="result">
          <div class="alert" style="display: none;"> Click "<strong>Run</strong>" button to see result. </div>
          <div class="ajax-loader-container" style="display: none;">
            <div>
                <div class="ajax-loader"></div>
            </div>
          </div>
          <iframe src=""></iframe>
        </div>
      </div>
  </div>
</div>

<div class="templates">
     <%= render "templates" %>
</div>

<script type="text/javascript">
    Mock.data = {
        elements: <%=raw @elements %>
    };
    $(function(){
       Mock.init.developer();
    });
</script>