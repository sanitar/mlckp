<% content_for :html_class do %>
designer
<% end %>

<% content_for :title do %>
    Проектировщик
<% end %>

<% content_for :navigation do %>
    <li class="active editreview"><a href="#edit">Edit</a></li>
    <li class="editreview"><a href="#review">Review</a></li>
<%  end %>

<style type="text/css">
    <%=raw @css %>
</style>

<script type="text/javascript">
    Mock.F = {
        <% @elements.each do |element| %>
            <% if element.js != nil %>
                <%= element.id %>: function(){
                    <%=raw element.js %>
                },
            <%end%>
        <%end%>
    }
</script>

<div id="navigation">
    <div>
        <div>
            <ul class="nav nav-list">
                <li class="nav-header"><%= link_to @project.name, project_pages_path(@project.id) %></li>
                <li class="nav-info">Все изменения сохранены</li>
                <div id="page" class="well">
                    <h6>Pages: <i class="icon-plus" title="Add page"></i></h6>
                    <ul class="nav nav-list">
                    </ul>
                </div>
            </ul>
        </div>
        <div id="groups">
            <ul class="nav nav-tabs">
                <% @groups.each do |group| %>
                    <li><a data-toggle="tab" href="#group<%= group.id %>"><%= group.label %></a></li>
                <% end  %>
            </ul>
        <div class="tab-content">
            <% @groups.each do |group| %>
                <div class="tab-pane" id="group<%= group.id %>">
                    <% @elements.each do |element| %>
                        <% if element.element_group_id == group.id %>
                            <div class="element" id="el<%= element.id %>"><span>
                            <%= image_tag ("elements/#{element.name}.png"), :title => element.description %>
                            </span></div>
                        <% end %>
                    <% end %>
                </div>
            <% end  %>
        </div>
        </div>
    </div>
</div>

<div id="workspace">

</div>

<form id="props_panel" class="well">
    <h4>Properties</h4>
    <div class="props-initial">
      <h6>Initial</h6>
      <div class="no-props" style="display: none;">Нет данных для отображения</div>
      <table><tbody>
        <tr>
          <td>x: </td>
          <td> <input type="text" class="input-condensed input-number" name="x" /> </td>
          <td>width: </td>
          <td> <input type="text" class="input-condensed input-number" name="w" /> </td>
        </tr><tr>
          <td>y: </td>
          <td> <input type="text" class="input-condensed input-number" name="y" /> </td>
          <td>height: </td>
          <td> <input type="text" class="input-condensed input-number" name="h" /> </td>
        </tr>
      </tbody></table>
    </div>

    <div class="props-params">
      <h6>Parameters</h6>
      <div class="no-props" style="display: none;">Нет данных для отображения</div>
      <table><tbody>
      </tbody></table>
    </div>
</form>

<div id="templates">
    <script type="text/template" id="block-template">
        <div class="block">
            <div class="content">
                {{ html }}
            </div>
        </div>
    </script>

    <script type="text/template" id="menu-item-template">
        <li><a title="{{ tooltip }}"><span class="menu-btn {{ menu_item }}"></span></a></li>
    </script>

    <script type="text/template" id="menu-divider-template">
        <li class="{{ divider }}"><a></a></li>
    </script>

    <script type="text/template" id="page-item-template">
        <li id="el{{ id }}">
            <a href="#{{ id }}"> {{ name }}
                <span style="display: none;">
                    <i class="icon-trash" title="Remove page"></i>
                    <i class="icon-pencil" title="Edit page"></i>
                </span>
            </a>
        </li>
    </script>

  <script type="text/template" id="params-item-template">
      <tr class="prop-{{type}}"><td class="td-first">{{name}}: </td> <td> {{{tpl}}} </td> </tr>
  </script>

</div>

<script type="text/javascript">
    Mock.data = {
        elements: <%=raw @elements.to_json %>,
        pages: <%=raw @pages.to_json %>
    };
    $(function(){
        Mock.init.designer();
    });
</script>
