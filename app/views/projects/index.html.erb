<% content_for :html_class do %>
    projects
<% end %>

<!-- fixme -->
<% content_for :breadcrumb do %>
  <li class="active"><%= link_to "Список проектов", projects_path %></li>
<% end %>

<h2>Список проектов:</h2>
<ul class="projects">
  <% if not @projects.present? %>
      <div class="empty">Нет проектов</div>
  <% end %>

  <% @projects.each do |project| %>
      <li>
        <%= button_to "", edit_project_path(project.id), :method=> :get, :class => "icon-pencil" %>
        <%= button_to "", project, :confirm => "Are you sure you want to delete?", :method => :delete, :class => "icon-trash" %>
        <%= link_to project.name, project_pages_path(project.id) %>
        <div class="description"><%= project.description %></div>
      </li>
  <%  end %>
  <li><%= link_to "Добавить проект", new_project_path %></li>
</ul>
